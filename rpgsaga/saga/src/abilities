import { Ability } from './ability';
import { Effect } from './effect';

const attacking = new Ability('Атака', 1, -1, 0);

const burnEffect = new Effect('Горение', 3, 7, false);
const fireArrows = new Ability('Огненные стрелы', 0.6, 1, 5, burnEffect, 'Archer');

const enchantEffect = new Effect('Заворожение', 1, 0, true);
const enchant = new Ability('Заворожение', 0, 1, 10, enchantEffect, 'Mage');

const retributionStrike = new Ability('Удар возмездия', 1.3, 3, 2, undefined, 'Warrior');

const heal = new Ability('Лечение', -1, 1, 6, undefined, 'Mage');

export const abilities = [attacking, fireArrows, enchant, retributionStrike, heal];
